<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="RectangleControl"
	x:Name="UserControl" d:DesignWidth="740.896" d:DesignHeight="417.015">

	<Grid x:Name="LayoutRoot" Width="{Binding Width, ElementName=UserControl}" Height="{Binding Height, ElementName=UserControl}">
		<Rectangle x:Name="Rectangle" Fill="#FF858585" HorizontalAlignment="Left" Stroke="Black" RadiusX="3" RadiusY="3" VerticalAlignment="Top" Width="{Binding Width, ElementName=LayoutRoot}" Height="{Binding Height, ElementName=LayoutRoot}"/>
		<Image x:Name="Image" HorizontalAlignment="Left" VerticalAlignment="Top" Width="{Binding Width, ElementName=Rectangle}" Height="{Binding Height, ElementName=Rectangle}"/>
	</Grid>
</UserControl>