<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
	mc:Ignorable="d"
	x:Class="HexagonControl"
	x:Name="UserControl"
	d:DesignWidth="481.791" d:DesignHeight="480" Width="480" Height="480">

	<Grid x:Name="LayoutRoot" Width="{Binding Width, ElementName=UserControl}" Height="{Binding Height, ElementName=UserControl}">
		<ed:RegularPolygon x:Name="Hexagon" StrokeStartLineCap="Round" StrokeLineJoin="Round" InnerRadius="1" PointCount="6" Stretch="Fill" Stroke="Black" Height="{Binding Height, ElementName=LayoutRoot}" Width="{Binding Width, ElementName=LayoutRoot}" Fill="#FF858585"/>
	</Grid>
</UserControl>